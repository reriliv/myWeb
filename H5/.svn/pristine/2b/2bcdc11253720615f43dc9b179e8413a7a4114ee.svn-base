*{ margin: 0; padding: 0; font-family: "Microsoft Yahei"; }
body{ background: #eee; }
header, section, footer{ width: 100%; }
header{ position: relative; text-align: center; z-index: 1; }
ul{ display: block; }
li{ list-style: none; }
header h3{ position: absolute; top: 50%; }
a{ text-decoration: none; color: #333; }
img{ display: block; width: 100%; }
footer{ position: absolute; bottom: 0; text-align: center; color: #999; }
input[type="checkbox"]{ display: none; }

.header-block{ display: flex; justify-content: flex-start; position: fixed; top: 0; left: 0; width: 100%; line-height: 1.25rem; background: #47aee1; text-align: left; overflow: hidden; }
.back-btn{ width: 1.25rem; text-align: center; color: #fff; }
.back-btn:active{ background: rgba(0, 147, 220, 1); }
.header-title{ text-align: center; color: #fff; font-size: .45rem; }

::-webkit-scrollbar{ width: 0; }

.alert-msg { position: fixed; z-index: 9999999; top: -1.25rem; left: 0; width: 100%; height: 1.25rem; background: #666; text-align: center; line-height: 1.25rem; font-size: .5rem; z-index: 9999; color: #fff; }
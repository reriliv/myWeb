.account-action{ display: block; background: #fff; border-bottom: 1px solid #eee; }
.account-action:first-child{ margin: 1.75rem 0 .5rem; /* padding: .25rem; box-shadow: 0 0.15rem 0.5rem #999; */ }
.account-action:last-child{ margin: 1.5rem auto 0; width: 90%; background: transparent; }
.account-head{ display: block; margin: 0 auto; width: 2rem; height: 2rem; border-radius: 1rem; overflow: hidden; }
.account-head img{ display: block; width: 100%; }
.account-name{ display: block; margin: .25rem auto 0; font-size: .45rem; text-align: center; }

.action-item, .personal-item, .pw-item{ display: flex; justify-content: space-between;padding: .25rem; align-items: center; font-size: .35rem; }
.go-ahead{ display: inline-block; transform: rotate(180deg); font-size: .35rem !important; }
.logout-btn{ display: block; padding: .25rem; background: #f84949; color: #fff; font-size: .5rem; text-align: center; box-shadow: 0 0.25rem 1rem #999; }

.personal-item{ background: #fff; border-bottom: 1px solid #eee; }
.personal-item:first-child{ margin-top: 1.25rem; }
.personal-item input{ border: 0; text-align: left;}
.personal-item input:read-only{ text-align: right; }
.personal-head, .personal-name{ display: inline-block; vertical-align: middle; }
.personal-head{ width: 1.5rem; height: 1.5rem; border-radius: 1rem; overflow: hidden; }

.change-remark { padding: .25rem .5rem; line-height: 1rem; color: #999; }
.change-info{ display: block; margin: 0 auto; padding: .25rem 0; width: 90%; text-align: center; background: #0094dc; border: 1px solid #fff; color: #fff; font-size: .5rem; }

.pw-block{ margin-top: 1.25rem; text-align: center; clear: both; }
.pw-item{ background: #fff; border-bottom: 1px solid #eee; }
.pw-item#oldPwd{ display: none; }
.pw-margin{ margin-bottom: .5rem; }
.pw-item span{ display: inline-block; vertical-align: middle; font-size: .4rem; font-weight: 600; }

.old-password, .new-password, .confirm-new-password{ display: block; width: 100%; border: 0; font-size: .35rem; outline: none; }
.old-password::placeholder, .new-password::placeholder, .confirm-new-password::placeholder{ color: #999; }
.confirm-change-btn{ display: block; margin: .5rem; padding: .25rem .5rem; background: #47aee1; border-radius: .15rem; font-size: .45rem; color: #fff; box-shadow: 0 0.15rem 0.25rem #999; }

.using-password{ display: flex; justify-content: space-between; margin: 0 0 .25rem; padding: .5rem; background: #fff; }
.using-check{ display: block; width: .5rem; height: .5rem; }
.default{ background: url(../../images/check-false.png) center top no-repeat; background-size: 100% auto; }
.checked{ background: url(../../images/check-true.png) center top no-repeat; background-size: 100% auto; }

.disabled{ color: #999; background: #ddd; }
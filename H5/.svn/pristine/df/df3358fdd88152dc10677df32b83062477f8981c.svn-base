.login-bg{ background: #fff; }
.login-bg a{ color: #fff; }
.login-title{ display: flex; align-items: center; padding: 1rem; color: #47aee1; font-size: .65rem; }
.login-logo, .login-name{  }
.login-name span{ display: block; text-align: left; }
.login-block{ margin: .5rem auto 0; text-align: center; clear: both; }
.login-item{ margin: 0 auto; padding: .25rem;  width: 90%;  text-align: left;  border-bottom: .01rem solid #f0f0f0; overflow: hidden; }
.login-item .iconfont{ display: inline-block; vertical-align: middle; color: #47aee2; font-size: .5rem; }
.user-name, .pass-word{ display: inline-block; vertical-align: middle; padding: .2rem; background: transparent; border: 0; color: #47aee1; outline: none; }
/*.user-name::-webkit-input-placeholder, .pass-word::-webkit-input-placeholder{ color: #47aee1; }*/
.user-name::-webkit-input-placeholder, .pass-word::-webkit-input-placeholder { /* WebKit browsers */
  color: #47aee1;
}
.user-name::-moz-placeholder, .pass-word::-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color: #47aee1;
}
.user-name::-moz-placeholder, .pass-word::-moz-placeholder { /*Mozilla Firefox 19+*/
  color: #47aee1;
}
.user-name::-ms-input-placeholder, .pass-word::-ms-input-placeholder { /*Internet Explorer 10+*/
  color: #47aee1;
}
.login-btn, .bind-btn{ display: inline-block; margin: .5rem auto 0; padding: .4rem 0; width: 90%; /* background: #e7512e; */background: #47aee1; border-radius: .15rem; font-size: .5rem; }
.wechat-login{ display: inline-block; padding: .125rem; width: 1.75rem; height: 1.75rem; border-radius: 5rem; box-shadow: 0 0 .5rem #d0d0d0; }
.other-login{ padding: .5rem; text-align: left; color: #666; font-size: .45rem; }
.wechat-login-logo{ display: inline-block; width: 1rem; height: 1rem; }
.wechat-login span:last-child{ display: block; color: #40af37; }

.header-background{ display: block; position: relative; padding: .35rem 0; width: 100%; background: #0094dc; color: #fff; box-shadow: 0 .1rem .5rem 0 #999; }
.header-icon{ display: block; margin: 0 auto .25rem; width: 2.5rem; height: 2.5rem; border: 1px solid #eee; border-radius: 2rem; overflow: hidden; }
.header-icon a{ display: block; width: 100%; height: 100%; }
.header-name{ font-size: .45rem; }
.set-btn{ display: block; position: absolute; top: 0; right: 0; padding: .25rem; width: .5rem; height: .5rem; }

.module{ display: block; margin-top: .5rem; box-shadow: 0 .1rem .5rem 0 #999; }
.module-title{ padding: .15rem .5rem; background: #fff; border-bottom: 1px solid #eee; }
.module-block{ overflow: hidden; }
.module-item{ display: inline-block; float: left; line-height: 1.2rem; border-bottom: 1px solid #eee;  background: #fff;  color: #333; text-align: center; }
.module-item:nth-of-type(odd){ border-right: 1px solid #eee; }
.module-item a{ display: block; font-weight: 600; }

.dock{ display: none; position: fixed; top: 0; z-index: 1; width: 100%; background: rgba(0, 0, 0, .5); }
.date-menu{ display: none; position: fixed; bottom: 0; z-index: 2; width: 100%; }
.menu-top{ background: #eee; border-bottom: 1px solid #ddd; }
.date-menu-block{ display: flex; justify-content: space-between; background: #eee; height: 5rem; overflow: hidden; }
.date-year, .date-month{ width: 50%; text-align: center; overflow: auto; }
.date-year-item, .date-month-item{ display: block; line-height: 1rem; }

.pay-block{ margin: 1.25rem auto 0; width: 90%; clear: both; }
.money-item{ padding: 1rem 0; text-align: center; }
.pay-money{ font-size: .75rem; }
.discount-tips{ color: #df6154; font-weight: 600; font-size: .35rem; }

.pay-item{ display: flex; justify-content: space-between; align-items: center; padding: .5rem; background: #fff; border-bottom: 2px solid #ddd; }
.pay-item:last-child{ border-bottom: 0; }
.pay-item div:nth-child(2){ width: 70%; }
.pay-type-icon{ display: inline-block; width: 1rem; height: 1rem; }
.confirm-btn{ display: block; padding: .35rem 0; margin-top: .75rem; background: #47aee1; color: #fff; font-size: .45rem; text-align: center; }

.using-check{ display: block; width: .5rem; height: .5rem; }
.default{ background: url(../images/check-false.png) center top no-repeat; background-size: 100% auto; }
.checked{ background: url(../images/check-true.png) center top no-repeat; background-size: 100% auto; }

.alert{ position: fixed; width: 7.5rem; height: 1.5rem; text-align: center; line-height: 1.5rem; background: #ddd; z-index: 9999; border-radius: .15rem; font-size: .5rem; }

.bind-title{ display: block; padding: .5rem; color: #47aee1; font-size: .65rem; }
.wechat-logo{ display: inline-block; width: 2rem; height: 2rem; border-radius: 5rem; overflow: hidden; }
.wechat-name{ font-size: .6rem; }
.bind-block { margin: 0 auto; text-align: center; clear: both; }
.bind-tips { padding: .25rem .5rem; text-align: left; color: #333; }
.unbind-btn{ display: inline-block; margin: .5rem auto 0; padding: .4rem 0; width: 90%; background: #d0d0d0; border-radius: .15rem; font-size: .5rem;}
.unbind-btn:active{ background: #f00; }
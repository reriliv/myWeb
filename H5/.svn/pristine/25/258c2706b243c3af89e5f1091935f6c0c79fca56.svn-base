.park-charge-block{ padding: 1rem .5rem; }
.park-charge-item{ width: 2.5rem; height: 1.25rem; text-align: center; line-height: 1.7; border: 1px solid #999; }

.second-card-list{ display: none; margin: 0 auto; width: 90%; }
.secondCard-item{ display: flex; justify-content: space-between; margin-bottom: .25rem; padding: .5rem; background: #fff; border: 1px solid #d0d0d0; border-radius: .2rem; }
.secondCard-state{ color: #d0d0d0; }
.secondCard-state i{ font-size: .4rem; }

.payment-block{ position: relative; margin-top: 1.25rem; overflow: hidden; }
.input{ position: relative; top: 0; padding: 1rem .5rem; text-align: center; background: #fff; }
.output{ position: absolute; top: 1rem; }
.payment-show{ display: block; padding-top: 1rem; text-align: center; line-height: 2; }
.payment-name{ color: #333; font-size: .45rem; }
.payment-price{ color: #07c422; font-size: .6rem; }
.payment-show, .payment-info{ padding: 0 .75rem .25rem; border-bottom: 1px solid #eee; background: #fff; }
.payment-info{ margin-bottom: .5rem; }
.payment-info p{ display: flex; justify-content: space-between; align-items: center; margin: .15rem 0; color: #333; font-size: .4rem; }
.payment-info p:first-child{ margin-top: 0; padding-top: .15rem; }
.plate-number{ margin: .5rem 0; }
.number-block{ display: flex; justify-content: space-between; align-items: center; padding: .1rem 0; border: 1px solid #999; border-radius: .1rem; }
.number-item{ display: inline-block; margin: 0 1.5px; width: 1rem; height: .75rem; text-align: center; line-height: .75rem; border: none; border-radius: .1rem; }
.focused{ margin: 0; border: 1.5px solid #47aee1; outline: none; }
.nec-check{ display: inline-block; width: .5rem; height: .5rem;}
.new-energy-car{ margin-top: .25rem; text-align: right; }
.new-energy-car span, .nec-check{ display: inline-block; vertical-align: middle; }

.payment-money{ color: #07c422; }

.next, .sure{ display: block; text-align: center; line-height: 1.25rem; background: #47aee1; font-size: .5rem; color: #fff; }
.sure{ margin: 0 .5rem; }

input[type="checkbox"]{ display: none; }

.card-block{ margin: 1.75rem auto 0; width: 90%;  }
.card-item{ display: block; margin-bottom: .5rem; padding: .75rem 1rem; background: #fff; border-radius: .2rem; box-shadow: 0rem -.25rem .25rem #d0d0d0; }
.card-item:first-child{ margin-top: 0; }
.card-item div{ display: flex; justify-content: space-between; line-height: 1rem; }
/*.secondCard-item{ display: flex; justify-content: space-between; width: 100%; }*/
.card-item span{ display: inline-block; vertical-align: middle; }
.card-state .iconfont{ font-size: .4rem; }
.card-num{ font-size: .55rem; font-weight: 600; }
.using{ color: #45e2a5; }
.lost{ color: #f77661; }
.exit{ color: #d0d0d0; }
.state-label, .card-balance, .second-card{ font-weight: 500; }
.second-card{ color: #999; }
.second-card i{ display: inline-block; vertical-align: baseline; font-size: .4rem; }

.record-block{ margin-top: 1.25rem; }
.record-item{ margin: 0 0 .5rem; padding: .5rem; background: #fff; }
.top, .bottom{ display: flex; justify-content: space-between; align-items: center; line-height: 2; }
.record-cardNum{ font-size: .5rem; }
.card-type{ display: inline-block; vertical-align: text-bottom; width: .6rem; text-align: center; line-height: .6rem; border-radius: 1rem; font-size: .35rem; text-shadow: none; font-weight: 500; color: #fff; }
.main{ background: #47aee1; }
.pay-icon{ display: inline-block; vertical-align: middle; width: .75rem; }

.recharge-block{ display: block; margin-top: 1.75rem; }
.charge-card{ margin: 0 auto .5rem; padding: .5rem; width: 70%; line-height: 1rem; background: #fff; border-radius: .25rem; }
.card-top, .card-bottom{ display: flex; justify-content: space-between; }
.charge-block{ padding: 1rem .5rem; background: #fff; }
.charge-block p{ margin-bottom: .5rem; }
.charge-list{ display: flex; justify-content: space-between; flex-wrap: wrap; align-items: center; align-content: space-between; margin-bottom: .5rem; height: 2.5rem; }
.charge-item{ padding: .25rem; width: 2rem; height: .55rem; text-align: center; line-height: .55rem; border: 1px solid #999; }
.charge-item input[type='number']{ display: block; width: 100%; height: 100%; border: 0; background: transparent; outline: none; }
.charge-item input[type='number']::placeholder{ color: #999; font-size: .35rem; text-align: center; }
.choosed{ background: #fff; border: 1px solid #47aee1 !important; color: #47aee1; }
.sure{ display: block; text-align: center; line-height: 1.25rem; background: #47aee1; font-size: .5rem; color: #fff; }

.default{ background: url(../../images/check-false.png) center top no-repeat; background-size: 100% auto; }
.checked{ background: url(../../images/check-true.png) center top no-repeat; background-size: 100% auto; }

